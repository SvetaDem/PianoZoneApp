<Window x:Class="PianoTrainerApp.Views.TempoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PianoTrainerApp.Views"
        mc:Ignorable="d"
        Title="Выберите темп" Height="220" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Text="Выберите темп:"
                   Margin="0,0,0,15"
                   FontWeight="Bold"
                   FontSize="13"/>

        <!-- Ползунок для выбора множителя скорости -->
        <Slider x:Name="TempoSlider" Minimum="0" Maximum="3" Value="1" 
                TickFrequency="0.05" IsSnapToTickEnabled="True"/>

        <!-- Текст с текущим значением ползунка -->
        <TextBlock Margin="0,10,0,20" FontWeight="Bold">
            <TextBlock.Text>
                <Binding ElementName="TempoSlider" Path="Value" StringFormat="{}{0:F2}x"/>
            </TextBlock.Text>
        </TextBlock>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="OK" Width="80"
                    Height="30" Margin="0 0 10 0"
                    HorizontalAlignment="Center"
                    Click="ButtonOk_Click"
                    Cursor="Hand"
                    Background="#252121"
                    BorderBrush="#444444"
                    BorderThickness="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
        Background="{TemplateBinding Background}"
        BorderBrush="{TemplateBinding BorderBrush}"
        BorderThickness="{TemplateBinding BorderThickness}"
        CornerRadius="15">
                        <TextBlock HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Text="OK"
               FontWeight="Medium"
               Foreground="White"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- наведение -->
                        <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a3a"/>
                            </Trigger>
                        <!-- нажатие -->
                        <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1f1f1f"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Width="80" Height="30"
        HorizontalAlignment="Center"
        Click="ButtonCancel_Click"
        Cursor="Hand"
        Background="#e0e0e0"
        BorderBrush="#888888"
        BorderThickness="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
CornerRadius="15">
                        <TextBlock HorizontalAlignment="Center"
       VerticalAlignment="Center"
       Text="Cancel"
       FontWeight="Medium"
       Foreground="#202020"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Изменение цвета при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#d0d0d0"/>
                            <!-- более тёмный -->
                        </Trigger>
                        <!-- нажатие -->
                        <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#b0b0b0"/>
                            <!-- ещё темнее -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
    </StackPanel>
</Window>

<Window x:Class="PianoTrainerApp.Views.TempoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PianoTrainerApp.Views"
        mc:Ignorable="d"
        Title="Выберите темп" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Выберите темп:" Margin="0,0,0,10"/>

        <!-- Ползунок для выбора множителя скорости -->
        <Slider x:Name="TempoSlider" Minimum="0" Maximum="2" Value="1" 
                TickFrequency="0.05" IsSnapToTickEnabled="True"/>

        <!-- Текст с текущим значением ползунка -->
        <TextBlock Margin="0,5,0,10" FontWeight="Bold">
            <TextBlock.Text>
                <Binding ElementName="TempoSlider" Path="Value" StringFormat="{}{0:F2}x"/>
            </TextBlock.Text>
        </TextBlock>

        <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="ButtonOk_Click"/>
    </StackPanel>
</Window>

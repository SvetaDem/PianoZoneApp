<Window x:Class="PianoTrainerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PianoTrainerApp.Views"
        mc:Ignorable="d"
        Title="PianoZone" Height="650" Width="1050"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Стиль вкладок навигации -->
        <Style x:Key="NavTabTextStyle" TargetType="TextBlock">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Foreground" Value="#E5E5E5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <!-- Hover эффект -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Универсальный стиль кнопки-иконки (profile/settings/exit) -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                         To="1.1" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                         To="1.1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                         To="1" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                         To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>


    <Grid>
        <!-- Фон -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/main_background.png" Stretch="Fill"/>
        </Grid.Background>

        <!-- ВЕРХНЯЯ ПАНЕЛЬ -->
        <Grid Margin="20,0" Height="60" VerticalAlignment="Top">

            <!-- Заголовок -->
            <TextBlock Text="PianoZone"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Black"/>

            <!-- Среднее меню -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <TextBlock Text="Home"
                           Foreground="White"
                           FontSize="20"
                           Cursor="Hand"
                           Margin="0,0,25,0"
                           Style="{StaticResource NavTabTextStyle}"
                           FontWeight="Medium"
                           VerticalAlignment="Bottom"/>

                <TextBlock Text="|"
                           Foreground="#202020"
                           FontSize="20"
                           FontWeight="Medium"
                           Margin="0,0,25,0"
                           VerticalAlignment="Bottom"/>

                <TextBlock Text="Learn"
                           Foreground="#202020"
                           FontSize="16"
                           FontWeight="Medium"
                           Cursor="Hand"
                           Style="{StaticResource NavTabTextStyle}"
                           Margin="0,0,25,0"
                           MouseLeftButtonDown="ButtonBeginner_Click"
                           VerticalAlignment="Bottom"/>

                <TextBlock Text="|"
                           Foreground="#202020"
                           FontSize="20"
                           FontWeight="Medium"
                           Margin="0,0,25,0"
                           VerticalAlignment="Bottom"/>

                <TextBlock Text="Songs"
                           Foreground="#202020"
                           FontSize="16"
                           Cursor="Hand"
                           Style="{StaticResource NavTabTextStyle}"
                           FontWeight="Medium"
                           MouseLeftButtonDown="ButtonLibrary_Click"
                           VerticalAlignment="Bottom"/>
            </StackPanel>

        </Grid>

        <!-- Иконки справа -->
        <StackPanel Orientation="Vertical"
            VerticalAlignment="Top"
                    Margin="20"
            HorizontalAlignment="Right">

            <Button Width="32" Height="32" Margin="0,0,0,10"
                    Style="{StaticResource IconButtonStyle}">
                <Image Source="/Images/profile.png"/>
            </Button>

            <Button Width="32" Height="32"
                    Style="{StaticResource IconButtonStyle}">
                <Image Source="/Images/settings.png"/>
            </Button>
        </StackPanel>

        <!-- ЦЕНТРАЛЬНЫЕ КАРТОЧКИ -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- Левая карточка -->
            <Button Cursor="Hand"
                    Background="Black"
                    BorderBrush="White"
                    BorderThickness="2"
                    Margin="0,0,60,0"
                    Width="330" Height="340"
                    Click="ButtonBeginner_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="25"
                            RenderTransformOrigin="0.5,0.5">

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect
                                    Color="#868686"
                                    BlurRadius="50"
                                    ShadowDepth="0"
                                    Direction="0"
                                    Opacity="0.5"/>
                            </Border.Effect>

                            <!-- Внутренний контейнер для текста -->
                            <StackPanel Margin="34,38,70,15" VerticalAlignment="Top">
                                <!-- Заголовок -->
                                <TextBlock
                                    Text="A beginner?"
                                    Foreground="White"
                                    FontSize="22"
                                    FontWeight="ExtraBold"/>

                                <!-- Подзаголовок с разной жирностью -->
                                <TextBlock
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,30,0,40"
                                    TextWrapping="Wrap">
                                    <Run Text="Don't worry and move on to" FontWeight="Light"/>
                                    <LineBreak/>
                                    <Run Text="learning the basics" FontWeight="Medium"/>
                                </TextBlock>
                                <Image
                                    Height="110"
                                    Margin="0,10,0,0"
                                    Source="/Images/piano.png"/>
                            </StackPanel>
                        </Border>
                        <!-- Триггеры анимаций -->
                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Увеличение -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1.05" Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1.05" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Возврат -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1" Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <!-- Правая карточка -->
            <Button
                Cursor="Hand"
                Background="White"
                BorderBrush="Black"
                BorderThickness="2"
                Width="330" Height="340"
                Click="ButtonLibrary_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">

                        <!-- Масштабирование всей кнопки -->
                        <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="25"
                    RenderTransformOrigin="0.5,0.5">

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <Border.Effect>
                                <DropShadowEffect
                        Color="#868686"
                        BlurRadius="50"
                        ShadowDepth="0"
                        Direction="0"
                        Opacity="0.5"/>
                            </Border.Effect>

                            <!-- Контент -->
                            <StackPanel Margin="34,38,15,38" VerticalAlignment="Top">
                                <TextBlock Text="Let's play"
                               Foreground="Black"
                               FontSize="22"
                               FontWeight="ExtraBold"/>

                                <TextBlock Foreground="Black"
                               FontSize="16"
                               Margin="0,30,0,20"
                               TextWrapping="Wrap">
                        <Run Foreground="#564949"
                             Text="Go to the library and"
                             FontWeight="Regular"/>
                        <LineBreak/>
                        <Run Text="choose the song you like"
                             FontWeight="Medium"/>
                                </TextBlock>

                                <Image Source="/Images/go_on.png"
                           Height="50"
                           Margin="-10,0"
                           HorizontalAlignment="Left"/>

                                <Image Width="190"
                           Margin="0,-70"
                           HorizontalAlignment="Right"
                           Source="/Images/piano_player.png"/>
                            </StackPanel>
                        </Border>

                        <!-- Триггеры анимаций -->
                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Увеличение -->
                                            <DoubleAnimation
                                    Storyboard.TargetName="border"
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                    To="1.05" Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                    Storyboard.TargetName="border"
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                    To="1.05" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Возврат -->
                                            <DoubleAnimation
                                    Storyboard.TargetName="border"
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                    To="1" Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                    Storyboard.TargetName="border"
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                    To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>

        <!-- КНОПКА ВЫХОД -->
        <Button
            Width="32" Height="32" Margin="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="ButtonExit_Click"
            Style="{StaticResource IconButtonStyle}">
            <Image Source="/Images/exit.png"/>
        </Button>


    </Grid>
</Window>
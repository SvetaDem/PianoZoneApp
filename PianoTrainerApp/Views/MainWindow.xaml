<Window x:Class="PianoTrainerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PianoTrainerApp"
        mc:Ignorable="d"
        Title="PianoZone" Height="450" Width="800">
    <Grid Margin="10">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Фильтр по уровню:" VerticalAlignment="Center"/>
                <ComboBox Width="150" Margin="10 0"
                          ItemsSource="{Binding DifficultyLevels}"
                          SelectedItem="{Binding SelectedDifficulty}"/>
                <Button Content="Импортировать MIDI" Command="{Binding ImportCommand}"/>
            </StackPanel>

            <ListBox ItemsSource="{Binding FilteredSongs}"
                     DisplayMemberPath="Title"
                     SelectedItem="{Binding SelectedSong}"
                     Margin="0 10 0 0"
                     MouseDoubleClick="ListBox_DoubleClick"/>
        </DockPanel>
    </Grid>
</Window>
